<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape
            android:shape="oval">

            <gradient
                android:startColor="@color/purple"
                android:endColor="@color/purple_light"
                android:type="radial"
                android:gradientRadius="60%p"
                android:centerX="0.5"
                android:centerY="0.5"
                android:angle="270"/>
            <!--<solid android:color="@color/purple" />-->
            <stroke
                android:width="@dimen/button_stroke"
                android:color="@color/purple"
                />
            <size
                android:width="@dimen/button_size"
                android:height="@dimen/button_size"
                />
            <padding
                android:top="@dimen/common_padding_min"
                android:bottom="@dimen/common_padding_min"
                android:left="@dimen/common_padding_min"
                android:right="@dimen/common_padding_min"
                />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape
            android:shape="oval">

            <gradient
                android:startColor="@color/purple_light"
                android:endColor="@color/purple"
                android:type="radial"
                android:gradientRadius="100%p"
                android:centerX="0.5"
                android:centerY="0.5"
                android:angle="270"/>
            <!--<solid android:color="@color/purple" />-->
            <stroke
                android:width="@dimen/button_stroke"
                android:color="@color/white"
                />
            <size
                android:width="@dimen/button_size"
                android:height="@dimen/button_size"
                />
            <padding
                android:top="@dimen/common_padding_min"
                android:bottom="@dimen/common_padding_min"
                android:left="@dimen/common_padding_min"
                android:right="@dimen/common_padding_min"
                />
        </shape>
    </item>
</selector>